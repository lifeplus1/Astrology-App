# Environment Variables - DO NOT COMMIT REAL VALUES
# Copy this file to .env.local and add your real values
# Add .env.local to .gitignore

# Backend Configuration
LOG_FILE=app.log
PORT=8000
EPHE_PATH=./backend/ephe

# External APIs - Replace with your actual keys
STRIPE_SECRET_KEY=your_stripe_secret_key_here
XAI_API_KEY=your_xai_api_key_here
API_KEY=your_api_key_here

# Firebase Configuration - Replace with your actual values
FIREBASE_API_KEY=your_firebase_api_key
FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com
FIREBASE_PROJECT_ID=your-project-id
FIREBASE_STORAGE_BUCKET=your-storage-bucket
FIREBASE_MESSAGING_SENDER_ID=your_sender_id
FIREBASE_CLIENT_ID=your_client_id
FIREBASE_APP_ID=your_app_id
FIREBASE_AUTH_URI=https://accounts.google.com/o/oauth2/auth
FIREBASE_CLIENT_X509_CERT_URL=https://www.googleapis.com/robot/v1/metadata/x509/your-service-account
FIREBASE_AUTH_PROVIDER_X509_CERT_URL=https://www.googleapis.com/oauth2/v1/certs

# Backend URL
BACKEND_URL=https://your-backend-url.com
