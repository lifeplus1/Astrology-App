{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "composite": true,
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.tsbuildinfo",
    "outDir": "./dist",
    "declaration": true,
    "declarationMap": true,
    "noEmit": false,
    "emitDeclarationOnly": false,
    "jsx": "react-jsx",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "rootDir": "./src"
  },
  "include": [
    "src/index.ts", 
    "src/minimal-exports.ts", 
    "src/performance.ts", 
    "src/lazy-loading.tsx", 
    "src/enhanced-testing.tsx", 
    "src/accessibility-testing.tsx", 
    "src/component-library.tsx",
    "src/react-performance.tsx",
    "src/hooks.tsx"
  ],
  "exclude": ["dist", "node_modules", "**/*.test.*", "**/*.spec.*"]
}
