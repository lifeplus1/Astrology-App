    "@testing-library/react": "^14.0.0",
    "@vitejs/plugin-react": "^4.0.0",
    "jsdom": "^23.0.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "vitest": "^1.0.0"
  },
  "files": [
    "dist",
    "src"
